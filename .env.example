# Trading Automation Environment Variables Template
# Copy this file to .env and fill in your actual values

# API Keys
QUIVER_API_KEY=your_quiver_api_key_here
ALPACA_API_KEY=your_alpaca_api_key_here
ALPACA_SECRET_KEY=your_alpaca_secret_key_here

# Alpaca Configuration
ALPACA_PAPER_TRADING=true
ALPACA_BASE_URL=https://paper-api.alpaca.markets

# Database Configuration
DATABASE_PATH=data/trading_automation.db
DATABASE_BACKUP_ENABLED=true
DATABASE_BACKUP_RETENTION_DAYS=30

# Logging Configuration
LOG_LEVEL=INFO
LOG_RETENTION_DAYS=30
LOG_PATH=logs

# Dashboard Configuration
DASHBOARD_HOST=0.0.0.0
DASHBOARD_PORT=5000
DASHBOARD_DEBUG=false

# Trading Configuration
TRADE_MINIMUM_AMOUNT=100.00
TRADE_SIZE_TYPE=fixed
POLITICIAN_MATCH_THRESHOLD=0.85
MINIMUM_CONGRESS_TRADE_VALUE=50000

# Scheduling Configuration
DAILY_EXECUTION_TIME=21:30
TIMEZONE=US/Eastern
MARKET_HOURS_START=09:30
MARKET_HOURS_END=16:00

# Monitoring and Alerting
ENABLE_EMAIL_NOTIFICATIONS=false
SMTP_SERVER=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
NOTIFICATION_EMAIL=

# External APIs
RATE_LIMIT_REQUESTS_PER_MINUTE=60
API_TIMEOUT_SECONDS=30
RETRY_MAX_ATTEMPTS=3
RETRY_BACKOFF_FACTOR=2